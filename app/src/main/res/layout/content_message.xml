    <Button
        android:id="@+id/btn_SecGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bgd_button"
        android:onClick="onSKGenerate"
        android:padding="5dp"
        android:text="@string/generate"
        app:layout_constraintBottom_toBottomOf="@+id/SecretKeyInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SecretKeyInputLayout" />

    <Button
        android:id="@+id/btn_IVGenerate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bgd_button"
        android:onClick="onIVGenerate"
        android:padding="5dp"
        android:text="@string/generate"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="@+id/IVInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/IVInputLayout" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:text="0"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textColor="@color/textFirst"
        app:layout_constraintEnd_toEndOf="@+id/SecretKeyInputLayout"
        app:layout_constraintTop_toTopOf="@+id/SecretKeyInputLayout"
        tools:ignore="HardcodedText" />

    <FrameLayout
        android:id="@+id/frame_addParam"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pv">

    </FrameLayout>


