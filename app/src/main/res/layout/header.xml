<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/linear_example_header_margin">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/linear_example_item_padding_left_right"
        android:paddingRight="@dimen/linear_example_item_padding_left_right"
        android:weightSum="3">


        <Button
            android:id="@+id/btn_text"
            android:layout_width="71dp"
            android:layout_height="42dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bgd_button"
            android:onClick="onCipherClick"
            android:text="@string/add_text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_image"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_image"
            android:layout_width="75dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bgd_button"
            android:onClick="onCipherClick"
            android:text="@string/add_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_file"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_text"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_open"
            android:layout_width="78dp"
            android:layout_height="41dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/bgd_button"
            android:onClick="onCipherClick"
            android:text="@string/add_existing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_file"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_file"
            android:layout_width="71dp"
            android:layout_height="42dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/bgd_button"
            android:onClick="onCipherClick"
            android:text="@string/add_file"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_open"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_image"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>